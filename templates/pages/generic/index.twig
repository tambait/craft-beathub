{% extends "_layouts/layout.twig" %}
{% block content %}
  {% if pageContext in ["artists", "bendovi"] %}
    {% set artists =
      craft.app.mQuery.getArtists({
        orderBy: "title"
      }).all()
    %}
    {% include "showcase/_components/card-grid-section" with {
      items: artists,
      type: "artist",
      title: "Artists",
      columns: "3"
    } %}
  {% endif %}

  {% if pageContext in ["albums", "albumi"] %}
    {% set albums =
      craft.app.mQuery.getAlbums({
        orderBy: "postDate desc",
        limit: 20
      }).with(
        ["coverImage", "artist"]
      ).all()
    %}

    {% include "showcase/_components/card-grid-section" with {
      items: albums,
      type: "album",
      title: "Albums",
      columns: "3"
    } %}
  {% endif %}
{% endblock %}
